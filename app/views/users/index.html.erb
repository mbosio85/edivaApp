<head>
	<link rel="shortcut icon" href="/assets/web_icon.ico” type="image/x-icon">
	<link rel="icon" href="/assets/web_icon.ico" type="image/x-icon">
</head>
<div class="row-fluid">
		
	<div class="span6">
	 <!-- Carousel
    ================================================== -->
    <div id="indexCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="item active" >
           	<img src="/assets/slide-01.jpg" alt="" >
           	<div class="container">
            <div class="carousel-caption"  height="30%">
              <h1>eDiVa</h1>
              <p class="lead">An application targeted towards genomic variant annotation, variant ranking using multiple features and family/trio analysis
              	to uncover potential causal gene(s) from NGS experiments.</p>
            </div>
            </div>
        </div>
        <div class="item">
          <img src="/assets/slide-02.jpg" alt="" >
			<div class="container">
            <div class="carousel-caption"  height="30%">
              <h1>eDiVa Annotation</h1>
              <p class="lead">Annotate your genomic variants with multiple gene annotations and with comprehensive meta data covering public allele frequencies, 
              	conservation and damage potential scores.</p>
            </div>
            </div>
        </div>
        <div class="item">
          <img src="/assets/slide-03.jpg" alt="" >
            <div class="container">
            <div class="carousel-caption" height="30%">
              <h1>eDiVa Trio/Family Analysis</h1>
              <p class="lead">Analyse samples from a family or trios for various inheritence models to find the causal gene(s)    </p>
              <p class="lead">&nbsp;  </p>
            </div>
            </div>
        </div>
      </div>
      <a class="left carousel-control" href="#indexCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#indexCarousel" data-slide="next">&rsaquo;</a>
    </div><!-- /.carousel -->
	</div>

	<div class="span6">
	<div class="Search">
	<% if flash[:color]== "valid" %>
		<div class="alert alert-success">
			<p><%= flash[:notice]%></p>
		</div>
	<% elsif flash[:color]== "invalid"%>
		<div class="alert alert-error">
			<p><%=flash[:notice]%></p>
		</div>
	<% else -%>
	
	<%end%>
	
	<%= form_tag(:controller => 'users', :action => 'authenticateUser') do %>				
	<table align="center"  width="75%">
		<tr>
  			<th>
  			  <b>Get started by logging in</b>		
  			</th>
  		</tr>
		<tr>
			<td>
				<%= text_field_tag :login_username , nil, :class => "signupPanel" ,:placeholder => "username" %>
			</td>
		</tr>
		<tr>	
			<td>
				<%= password_field_tag :login_password, nil,:class => "signupPanel", :placeholder => "password" %>
			</td>
		</tr>
		<tr>
			<th>
				<%= submit_tag "Login", :class => 'btn btn-primary btn-large' %>
			</th>			
		</tr>
	</table>	
	<% end -%>	
	
	
  	<%= form_tag(:controller => 'users', :action => 'create') do %>
  	<table align="center"  width="75%" text-align="center">
  		<tr>
  			<th>
  			  <b>If you don't have an account yet, register here.</b>		
  			</th>
  		</tr>
  		<tr>
 			<td>
 		    <%= text_field_tag :username,nil,:placeholder => "username", :class => "signupPanel" %> 			 
			</td>
		</tr>
		<tr>
			<td>
		    <%= text_field_tag :email,nil,:placeholder => "email", :class => "signupPanel" %>
		    </td>
		</tr>
		<tr>    
		    <td>
  			<%= password_field_tag :password, nil, :placeholder => "password" , :class => "signupPanel"%>
  			</td>
  		</tr>
  		<tr>	
  			<td>
		    <%= password_field_tag :password_confirmation, nil, :placeholder => "password confirmation" , :class => "signupPanel"%>
		    </td>
		</tr>
		<tr>
			<th>	   
      		<%= submit_tag "SignUp" , :class => 'btn btn-primary btn-large' %>
  			</th>
  		</tr>
  	</table>	
  	<% end %>
	</div>
	</div>

   <div class="footer">
   		
		<table align="center" width="100%">
			<tr>
				<td> <a href="http://www.crg.eu"><img src="/assets/crg_logo.png" alt=""  height="50" width="60"> </a>	</td>
				<td> &nbsp; &nbsp; </td>
				<td>An application of the <a href="http://www.crg.eu/en/programmes-groups/genomic-and-epigenomic-variation-disease">Ossowski Lab</a> </td>
				
				<!--<td> &nbsp; &nbsp; </td>	-->		
			</tr>	
		</table>
    </div>


</div>