<div class="row-fluid">
	<div class="span12">
	<% if flash[:color]== "valid" %>
		<div class="alert alert-success">
			<p><%= flash[:notice]%></p>
		</div>
	<% elsif flash[:color]== "invalid"%>
		<div class="alert alert-error">
			<p><%=flash[:notice]%></p>
		</div>
	<% else -%>
	
	<%end%>

		<div class="Search">
		   <%= form_tag(:controller => 'eapp',:action => 'search') do %>
		   <table align="center">
		   	<tr>
		   	<td>
		   	Search variants in eDiVa database:
	  		</td>
           	</tr>
           	<tr>
           	<td>   
	  		   <%= text_field_tag :searchTerm, nil, :class => 'sfield', :placeholder => "e.g. chr1:10000-1000000, ATM, ENSG00000187634" %> 
           	</td>
           	</tr>
           	<tr>
           		<th>
           			<%= submit_tag 	"Search",  :class => 'btn btn-primary btn-medium' %>
           		</th>
           	</tr>		
           	<tr>
           	<td>		
           		<b>Advanced Options</b>
           </td>
           </tr>
           <tr>
           <td>
	           <%= select_tag "chGeneDef", options_for_select(@genedefinition), :class => 'sfieldOptional' %>
           	</td>
           </tr>
           <tr>
           <td>
	           <%= select_tag "chFunction",options_for_select(@exonicFunction), :class => 'sfieldOptional'  %> 
    	   </td>
           </tr>
           <tr>
           <td>
           	   <%= select_tag "varfunction",options_for_select(@variantFunction), :class => 'sfieldOptional' %> 
           </td>
           </tr>
           <tr>
           <td>
	           <%= text_field_tag :af ,nil,  :placeholder => "e.g. >0.05",  :class => 'sfieldOptionalaf' %>            
    	   </td>
           </tr>
           </table>
       	   <% end %>
		</div>
	</div>	
</div>
