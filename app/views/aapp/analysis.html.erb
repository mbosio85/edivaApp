<div class="row-fluid">
	
	<div class="span12">
	
  	    <% if flash[:color]== "valid" %>
			<div class="alert alert-success">
				<p><%= flash[:notice]%></p>
			</div>
		<% elsif flash[:color]== "invalid"%>
			<div class="alert alert-error">
				<p><%=flash[:notice]%></p>	
			</div>	
		<% else -%>
		
		<%end%>
		
		<p> Welcome,<b> <%= session[:user] %></b>.		

	</div>
	
</div>

<div class="row-fluid">

	<div class="span8">
		<h4>
			Workspace File(s)
		</h4>

		<table class="table table-hover">
		<thead>
		</thead>	
		<tbody>
			<% if (Dir.entries(session[:user] + "/").length == 2) %>
			<tr>
			<td>
				Your currently have no file(s).
			</td>
			</tr>
			<% else -%>
				<ul>
				<% Dir.foreach(session[:user] + "/") do |file|-%>
					<% next if file == '.' or file == '..' -%>
				<tr>
				<td>
					<li> <%= file %> </li>
				</td>
				</tr>
				<% end -%>	
				</ul>
			<% end -%>
		</tbody>
		</table>

	</div>


	<div class="span4">
		<h4>
			Workspace File Action(s)
		</h4>

		<div class="workspaceactions">
			<%= form_tag(:controller => 'aapp',:action => 'workspaceFileAction') do %>
				<% if @files.length > 0 %>
					<%= select_tag "selectedFile", options_for_select(@files) %> Select file 
					<%= select_tag "selectedAction", options_for_select(@actions) %> Select action on file
					<br>
					<%= submit_tag "Commit", :class => 'btn btn-primary btn-medium'%>
					<% else -%>
						<p> Empty workspace !! </p>
					<% end -%>
			<% end -%>
		</div>		

	
	</div>



</div>

